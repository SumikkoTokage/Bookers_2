<div class="container">
    <div class="row">
    	<div class="col-lg-4">
			<h2>User info</h2>
			<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

			<table class="table">
				<thead>
					<tr>
						<th>name</th>
						<th><%= current_user.name %></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</tbody>
			</table>
	       	<%= link_to edit_user_path(current_user), class: "edit_user_#{@current_user} btn btn-default" do %>
	       		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
	       	<%end%>
			<h2>New book</h2>

			<%= form_for(@book) do |f| %>

				<h4>Title</h4>
				<%= f.text_field :title, class: "book_title" %>

				<h4>Opinion</h4>
				<%= f.text_area :opinion, class: "book_body" %>

				<%= f.submit 'Create Book' %>

			<%end%>
        </div>
        <h1>Users</h1>
        <div class="col-lg-8">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Image</th>
						<th>name</th>

					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<th><%= attachment_image_tag  user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></th>
							<th><%= user.name %></th>
							<th><%= link_to "Show", user_path(user.id), class: "user_#{@user}" %></th>
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>



