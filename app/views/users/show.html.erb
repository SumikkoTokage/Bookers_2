
<%= notice %>

<div class="container">
    <div class="row">
    	<div class="col-xs-3">
            <h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>

			<table class="table">
				<thead>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %>
		    <%= link_to edit_user_path(@user), class: "edit_user_#{@user.id} btn btn-default" do %>
		    	<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
	    	<%end%>
		    <% end %>
			<h2>New book</h2>

			<%= form_for(@book) do |f| %>

				<h4>Title</h4>
				<%= f.text_field :title, class: "book_title" %>

				<h4>Opinion</h4>
				<%= f.text_area :opinion, class: "book_body" %>

				<%= f.submit 'Create Book' %>

			<%end%>
        </div>
        <h1>Books</h1>
        <div class="col-xs-9">
			<table  class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
							<td>
								<%= link_to book_path(book.id) do %>
									<%= book.title %>
								<%end%>
							</td>
							<td><%= book.opinion %></td>
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>





