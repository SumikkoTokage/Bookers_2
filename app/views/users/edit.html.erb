<h1>User info</h1>


<%= form_for(@user) do |f| %>

<div class="field">
    <label>Name</label>
    <%= f.text_field :name, autofocus: true, class: "name" %>
</div>

<div class="field">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
<label class="control-label sr-only" for="inputEmail">Image</label>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
</div>

<div class="field">
    <label>Introduction</label>
    <%= f.text_area :introduction, autofocus: true, class: "introduction" %>
</div>

<div class="action">
	<%= f.submit 'Update User' %>
</div>

<%end%>

