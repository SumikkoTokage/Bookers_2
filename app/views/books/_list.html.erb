<h2>New book</h2>
<% if book.errors.any? %>
	<%= book.errors.count %>件のエラーが発生しました
	<% book.errors.full_messages.each do |message| %>
		<%= message %>
	<% end %>
<% end %>
	<%= form_for(book) do |f| %>
	<h4>Title</h4>
		<%= f.text_field :title, class: "book_title" %>

	<h4>Opinion</h4>
		<%= f.text_area :opinion, class: "book_body" %>

		<%= f.submit 'Create Book' %>

	<%end%>