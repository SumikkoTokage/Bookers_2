
<%= notice %>

<div class="container">
    <div class="row">
    	<div class="col-lg-4">
            <h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>

			<table class="table">
				<thead>
					<tr>
						<th>name</th>
						<th><%= current_user.name %></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %>
			    <%= link_to edit_user_path(@user), class: "edit_user_#{@user.id} btn btn-default" do %>
			    	<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		    	<%end%>
		    <% end %>
			<h2>New book</h2>

			<%= form_for(@new_book) do |f| %>

				<h4>Title</h4>
				<%= f.text_field :title, class: "book_title" %>

				<h4>Opinion</h4>
				<%= f.text_area :opinion, class: "book_body" %>

				<%= f.submit 'Create Book' %>

			<%end%>
        </div>
        <h1>Book datail</h1>
        <div class="col-lg-8">
			<table  class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(current_user.id) do %>
								<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><%= current_user.name %>
							<%end%>
						</td>
						<td><%=  @book.title %></td>
						<td><%=  @book.opinion %></td>
						<% if @book.user == current_user %>
							<td><%= link_to "edit", edit_book_path(@book), class: "edit_book_#{@book.id} btn btn-default" %></td>
							<td><%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "destroy_book_#{@book.id} btn btn-default" %></td>
						<%end%>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>





